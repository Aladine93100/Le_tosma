
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin"}) do |f| %>
<h4>T'as oublie ton mot de passe ?! Pas de galere </h4>


  <%= f.error_notification %>

    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Rentre juste ton email !", input_html: {class: "form-control"} %>
 
    <%= f.button :submit, "Et clique ici ! C'est parti...", class: "btn btn-primary btn-block" %>
<% end %>

<%= render "devise/shared/links" %>
